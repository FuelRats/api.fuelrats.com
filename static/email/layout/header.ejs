                padding: 1em;
            }

            .sub {
                font-size: 0.8em;
            }

            .action {
                text-align: center;
                padding: 2em;
            }

            .actionButton {
                display: inline-block;
                background: #d65050;
                color: #ffffff;
                border: none;
                padding: 0.5em;
                font-size: 1.5em;
                margin-bottom: 1em;
            }

            .actionButton:hover {
                background: #d96666;
                text-decoration: none;
            }

            .tokenView {
                font-size: 3em;
                padding: 0.2em;
                display: inline-block;
                background: #333;
            }
