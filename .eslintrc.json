{
  "parser": "babel-eslint",
  "plugins": ["@babel/plugin-external-helpers"],
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  },
  "extends": [
    "@fuelrats/eslint-config"
  ],
  "rules":{
    "no-restricted-syntax": [
      "error",
      "VariableDeclarator LogicalExpression[operator=\"||\"]"
    ]
  }
}
