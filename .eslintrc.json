{
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  },
  "extends": [
    "@fuelrats/eslint-config"
  ],
  "rules":{
    "no-restricted-syntax": [
      "error",
      "VariableDeclarator LogicalExpression[operator=\"||\"]"
    ]
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
